<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    controllerName="cgi.hr.userdata.controller.view1"
>
    <Button
        id="create"
        text="Add"
        press="onCreate"
        visible="{= ${editableModel>/add} === true ? true : false }"
    />
    <Button
        id="update"
        text="Update"
        press="onUpdate"
        visible="{= ${editableModel>/edit} === true ? true : false }"
    />
    <Button
        id="save"
        text="Save"
        press="onSave"
        visible ="{= ${editableModel>/editable} === true ? true : false }"
    />
    <Button
        id="Delete"
        text="Delete"
        press="onDelete"
        visible ="{= ${editableModel>/delete} === true ? true : false }"
    />
        <Button
        id="Totalscore"
        text="TotalScore"
        press="onTotalScore"
        
    />
      <Button
        id="NextScreen"
        text="NextScreen"
        press="onNextScreen"
        
    />
    <Table
        id="userData"
        items="{/UserSet}"
        growing="true"
        mode="MultiSelect"
        selectionChange="userSelectionChange"
    >
        <ColumnListItem>
            <cells>
                <HBox>
                <Text text="{id}" visible="{= ${editable} === true ? false : true }"/>
                <Input
                    id="id"
                    value="{id}"
                    visible="{= ${editable} === true ? true : false }"
                />
                </HBox>
                <HBox>
                <Text text="{name}" visible="{= ${editable} === true ? false : true }"/>
                <Input
                    id="name" 
                    value="{name}"
                    visible="{= ${editable} === true ? true : false }"
                />
                </HBox>
                <HBox>
                <Text text="{email}" visible="{= ${editable} === true ? false : true }"/>
                <Input
                    id="email"
                    value="{email}"
                    visible="{= ${editable} === true ? true : false }"
                />
                </HBox>
                <HBox>
                <Text text="{mobile}" visible="{= ${editable} === true ? false : true }"/>
                <Input
                    id="mobile"
                    value="{mobile}"
                    visible="{= ${editable} === true ? true : false }"
                />
                </HBox>
                <HBox>
                <Text text="{ path:'score', formatter: '.formatter.status' }" visible="{= ${editable} === true ? false : true }"/>
                <Input
                    id="score"
                    value="{
                            path: 'score',
                            formatter:'.formatter.status'
                                }"
                    visible="{= ${editable} === true ? true : false }"
                />
                </HBox>

            </cells>
        </ColumnListItem>
        <columns>
            <Column>
                <Label text="Id" />
            </Column>
            <Column>
                <Label text="Name" />
            </Column>
            <Column>
                <Label text="Email" />
            </Column>
            <Column>
                <Label text="Mobile" />
            </Column>
            <Column>
                <Label text="Score" />
            </Column>
        </columns>
    </Table>
